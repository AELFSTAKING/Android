<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <!--
        <item name="android:windowIsTranslucent">true</item>
        -->
    </style>

    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Toolbar弹出层样式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层字体颜色 -->
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/textSecondary</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-10dp</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <!--<item name="android:listDivider">@drawable/bg_divider</item>-->
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/bg_white_radius_9</item>
        <item name="otherButtonTopBackground">@drawable/bg_grey2_top_radius_9</item>
        <item name="otherButtonMiddleBackground">@drawable/bg_white</item>
        <item name="otherButtonBottomBackground">@drawable/bg_white_bottom_radius_9</item>
        <item name="cancelButtonTextColor">#FF999999</item>
        <item name="otherButtonTextColor">#FF333333</item>
        <item name="actionSheetPadding">8dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">18sp</item>
    </style>

    <!--交易是否显示两边的textview -->
    <declare-styleable name="IsShowTv">
        <attr name="isShow" format="boolean"></attr>
    </declare-styleable>

    <style name="MainTabLayout" parent="WrapWrap.Vertical.Center">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="MainTabText" parent="WrapWrap">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/main_tab_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomRadioBuy">
        <item name="android:background">@drawable/bg_radio_buy</item>
        <item name="android:textColor">@color/buy_sell_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="CustomRadioSell">
        <item name="android:background">@drawable/bg_radio_sell</item>
        <item name="android:textColor">@color/buy_sell_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="CustomRadioKLineItem">
        <item name="android:textColor">@color/kline_item_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <declare-styleable name="TradeEditText">
        <attr name="isMoney" format="boolean"/>
        <attr name="setHintText" format="string"/>
        <attr name="isShowAddSub" format="boolean"/>
    </declare-styleable>

    //交易控件的边距
    <declare-styleable name="TradeViewPadding">
