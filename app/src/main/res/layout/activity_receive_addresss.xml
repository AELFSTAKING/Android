<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch.Vertical"
    android:background="@color/color_white">
    <include
        layout="@layout/toolbar_activity_layout"
    />
    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none"
    >
        <LinearLayout
            style="@style/MatchMatch.Vertical"
            android:background="@mipmap/bg_deposit_address"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        >
            <LinearLayout
                style="@style/MatchWrap.Vertical"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_assets_middle"
                android:gravity="center_horizontal"
            >
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="40dp"
                />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/WrapWrap.TextSecondary.12sp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    tools:text="esgqga4whsaewu65aj64janrrajfsdgghwQSfefegvdet"
                />
                <TextView
                    android:id="@+id/tv_copy"
                    style="@style/WrapWrap.ColorWhite.16sp"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="复制地址"
                />
                <LinearLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                >
                    <TextView
                        style="@style/WrapWrap.ColorFFE8353C.12sp"
                        android:text="提示："
                    />
                    <TextView
                        android:id="@+id/tv_notice_1"
                        style="@style/WrapWrap.ColorFFE8353C.12sp"
                        tools:text="1、该地址只支持S-BTC收款！请不要向本地址直接发 起BTC转账！"
                    />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/WrapWrap.TextSecondary.12sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="41dp"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:text="请确保ETH账户中至少有少量ETH作为GAS费，否则将导致交易失败！"
            />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

