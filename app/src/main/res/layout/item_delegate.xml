<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_root"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp">
    <TextView
            android:id="@+id/tv_buy_sell"
            android:layout_width="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_increase"
            tools:text="@string/buy"
            android:textSize="13sp"/>
    <TextView
            android:id="@+id/tv_symbol_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_buy_sell"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            tools:text="ETH/BTC"
            android:textSize="13sp"/>
    <TextView
            android:id="@+id/tv_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_symbol_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            tools:text="2018-02-17 15:56:45"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/sp_12"/>

    <io.alf.exchange.widget.TradeCircleView
            android:id="@+id/circle_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_buy_sell"/>
    <TextView
            android:id="@+id/tv_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量："
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toTopOf="@+id/circle_view"
            app:layout_constraintLeft_toRightOf="@+id/tv_buy_sell"/>
    <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toTopOf="@+id/circle_view"
            app:layout_constraintLeft_toRightOf="@+id/tv_sl"
            android:layout_marginLeft="1dp"/>
    <TextView
            android:id="@+id/tv_jg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/circle_view"
            app:layout_constraintLeft_toRightOf="@+id/tv_buy_sell"/>
    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="456"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/circle_view"
            app:layout_constraintLeft_toRightOf="@+id/tv_jg"
            android:layout_marginLeft="1dp"/>
    <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="撤销"
            android:textColor="@color/textSecondary"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price"
            android:background="@drawable/current_delegate_cancel_all_shape"/>
    <View
        android:layout_marginTop="16dp"
        style="@style/HorizontalLine.ColorFFECEDF4"
        app:layout_constraintTop_toBottomOf="@+id/circle_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>