<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_quotation_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#6B6F9E"
        android:visibility="gone"/>
    <LinearLayout
        style="@style/MatchWrap.Horizontal.Center"
        android:layout_margin="15dp"
    >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 币种-->
            <TextView
                android:id="@+id/tv_market_currency_type"
                style="@style/WrapWrap.TextSecondary.12sp"
                android:layout_gravity="center_vertical"
                android:text="交易对/24H量"
            />
        </LinearLayout>

        <!--最新价-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_market_latest_price"
                style="@style/WrapWrap.TextSecondary.12sp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="最新价"
            />

        </LinearLayout>

        <!--24H 涨跌-->
        <LinearLayout
            android:id="@+id/ll_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_market_quote_change_24h"
                style="@style/WrapWrap.TextSecondary.12sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="3dp"
                android:gravity="end|center_vertical"
                android:text="涨跌幅"
            />
        </LinearLayout>
        <!--24H 涨跌-->
        <LinearLayout
            android:id="@+id/ll_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                style="@style/WrapWrap.TextSecondary.12sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="3dp"
                android:gravity="end|center_vertical"
                android:text="收藏"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>