<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch.Vertical"
    android:background="@color/color_white">
    <include
        layout="@layout/toolbar_activity_layout"
    />
    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none"
    >
        <LinearLayout
            style="@style/MatchMatch.Vertical"
            android:background="@mipmap/bg_deposit_address"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        >
            <LinearLayout
                style="@style/MatchWrap.Vertical"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_assets_middle"
                android:gravity="center_horizontal"
            >
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="40dp"
                />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/WrapWrap.TextSecondary.12sp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    tools:text="esgqga4whsaewu65aj64janrrajfsdgghwQSfefegvdet"
                />
                <TextView
                    android:id="@+id/tv_copy"
                    style="@style/WrapWrap.ColorWhite.16sp"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="复制地址"
                />
                <LinearLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                >
                    <TextView
                        style="@style/WrapWrap.ColorFFE8353C.12sp"
                        android:text="提示："
                    />
                    <TextView
                        android:id="@+id/tv_notice_1"
                        style="@style/WrapWrap.ColorFFE8353C.12sp"
                        tools:text="1、该地址只支持BTC跨链充值，请不要使用没有绑定的BTC地址进行充值。"
                    />
                    <TextView
                        android:id="@+id/tv_notice_2"
                        style="@style/WrapWrap.ColorFFE8353C.12sp"
                        android:text="2、该地址不支持通过交易所账户以提币的方式进行充值。"
                    />
                    <TextView
                        android:id="@+id/tv_notice_3"
                        style="@style/WrapWrap.ColorFFE8353C.12sp"
                    />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap.Vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_assets_middle"
                android:gravity="center_horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="25dp"
                android:paddingRight="12dp"
                android:paddingBottom="25dp"
            >
                <LinearLayout
                    style="@style/MatchWrap.Horizontal"
                    android:gravity="center_vertical"
                >
                    <TextView
                        style="@style/WrapWrap.TextPrimary.14sp"
                        android:text="已绑定充值地址"
                    />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                    />
                    <TextView
                        android:id="@+id/tv_manage_address"
                        style="@style/WrapWrap.TextPrimary.12sp"
                        android:padding="5dp"
                        android:text="管理"
                    />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    style="@style/MatchWrap"
                    android:layout_marginTop="7dp"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

