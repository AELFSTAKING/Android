<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_solid_2_color_ffffffff"
    android:paddingLeft="20dp"
    android:paddingTop="23dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
>
    <TextView
        android:id="@+id/tv_deposit_title"
        style="@style/WrapWrap.ColorFF641DAF.12sp"
        android:text="充值奖励"
    />
    <TextView
        android:id="@+id/tv_deposit_time"
        style="@style/WrapWrap.TextSecondary.12sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_deposit_title"
        tools:text="2019.7.5 11:00"
    />
    <View
        style="@style/HorizontalLine.ColorFFECEDF4"
        android:layout_below="@+id/tv_deposit_title"
        android:layout_marginTop="14dp"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/MatchMatch"
        android:layout_below="@+id/tv_deposit_title"
        android:layout_marginTop="20dp"
    />
</RelativeLayout>

