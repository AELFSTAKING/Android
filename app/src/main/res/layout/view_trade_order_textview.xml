<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cs_parent"
    style="@style/MatchWrap"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_area_statistic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.alf.exchange.widget.TradeOrderTextView
        android:id="@+id/ttv_number"
        style="@style/WrapWrap.TextSecondary.10sp"
        android:layout_width="match_parent"
        android:gravity="right|center_vertical"
        android:paddingRight="1dp"
        android:text="--"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_price"
        style="@style/WrapWrap.ColorDF677E.10sp"
        android:paddingLeft="1dp"
        android:text="@string/price_gang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_price_right"
        style="@style/WrapWrap.ColorDF677E.10sp"
        android:paddingLeft="1dp"
        android:text="@string/price_gang"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>